---
import { Image } from 'astro:assets'
const { title, img, href } = Astro.props;
---

<a href={href}>
    <div class="badget-container">
        <p>{title}</p>
    </div>
</a>

<style>
    .badget-container {
        border-radius: 10px;
        outline: 2px solid pink;
        padding: 0.1rem 1rem
    }
    
</style>
