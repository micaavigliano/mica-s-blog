---
import MainLayout from "@layouts/MainLayout.astro";

export async function getStaticPaths() {
  const posts = await Astro.glob("../../../content/posts/*.{md,mdx}");

  return posts.map((post: any) => ({
    params: {
      slug: post.file
        .split("/")
        .pop()
        .replace(/\.md(x)?/, ""),
    },
    props: { post },
  }));
}

const { Content } = Astro.props.post;
---

<MainLayout>
  <div class="content">
    <Content />
  </div>
</MainLayout>
