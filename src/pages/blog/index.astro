---
import MainLayout from "../../layouts/MainLayout.astro";
const posts = await Astro.glob("../../content/posts/*.{md,mdx}");
---

<MainLayout>
  <h1>Blog</h1>
  <section>
    <p>Acá podrás encontrar entradas sobre accesibilidad</p>
    {
      posts?.map((post) => (
        <li>
          <a
            href={`./${post.file
              .split("/")
              .pop()
              .replace(/\.md(x)?/, "")}`}
          >
            {post.frontmatter.title}
          </a>
        </li>
      ))
    }
  </section>
</MainLayout>

<style>
  ul {
    list-style: none;
  }
</style>
